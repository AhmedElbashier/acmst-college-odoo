# ACMST College Odoo Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=acmst_college
DB_USER=odoo
DB_PASSWORD=odoo

# Odoo Configuration
ODOO_VERSION=17.0
ODOO_PORT=8069
ODOO_WORKERS=2

# Admin Configuration
ADMIN_PASSWORD=admin

# Email Configuration (Optional)
EMAIL_FROM=noreply@acmst.edu
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_SSL=False
SMTP_USER=
SMTP_PASSWORD=

# Security
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/odoo/odoo.log

# Performance
LIMIT_MEMORY_HARD=2684354560
LIMIT_MEMORY_SOFT=2147483648
LIMIT_REQUEST=8192
LIMIT_TIME_CPU=600
LIMIT_TIME_REAL=1200
