# ACMST College Odoo Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=acmst_college
DB_USER=odoo
DB_PASSWORD=odoo

# Odoo Configuration
ODOO_VERSION=17.0
ODOO_PORT=8069
ODOO_WORKERS=2

# Admin Configuration
ADMIN_PASSWORD=admin

# Email Configuration (Required for notifications)
# Uncomment and configure one of the options below:

# Option 1: Gmail SMTP (Recommended)
# EMAIL_FROM=noreply@acmst.edu
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SSL=False
# SMTP_TLS=True
# SMTP_USER=notifications@acmst.edu
# SMTP_PASSWORD=your_gmail_app_password_here

# Option 2: Custom SMTP Server
# EMAIL_FROM=noreply@yourdomain.com
# SMTP_SERVER=your-smtp-server.com
# SMTP_PORT=587
# SMTP_SSL=False
# SMTP_TLS=True
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# Option 3: Local SMTP (Development Only)
EMAIL_FROM=noreply@acmst.edu
SMTP_SERVER=localhost
SMTP_PORT=25
SMTP_SSL=False
SMTP_TLS=False
SMTP_USER=False
SMTP_PASSWORD=False

# Security
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/odoo/odoo.log

# Performance
LIMIT_MEMORY_HARD=2684354560
LIMIT_MEMORY_SOFT=2147483648
LIMIT_REQUEST=8192
LIMIT_TIME_CPU=600
LIMIT_TIME_REAL=1200
