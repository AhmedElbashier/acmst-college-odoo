<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- University Tree View -->
        <record id="view_acmst_university_tree" model="ir.ui.view">
            <field name="name">acmst.university.tree</field>
            <field name="model">acmst.university</field>
            <field name="arch" type="xml">
                <tree string="Universities" decoration-info="not active" decoration-success="is_main">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="short_name"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="established_year"/>
                    <field name="college_count"/>
                    <field name="program_count"/>
                    <field name="student_count"/>
                    <field name="is_main" invisible="not is_main"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- University Form View -->
        <record id="view_acmst_university_form" model="ir.ui.view">
            <field name="name">acmst.university.form</field>
            <field name="model">acmst.university</field>
            <field name="arch" type="xml">
                <form string="University">
                    <header>
                        <button name="action_view_colleges" type="object" string="View Colleges" class="btn-primary" invisible="not college_count"/>
                        <button name="action_view_programs" type="object" string="View Programs" class="btn-secondary" invisible="not program_count"/>
                        <button name="action_view_students" type="object" string="View Students" class="btn-secondary" invisible="not student_count"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_colleges" type="object" class="oe_stat_button" icon="fa-building">
                                <field name="college_count" widget="statinfo" string="Colleges"/>
                            </button>
                            <button name="action_view_programs" type="object" class="oe_stat_button" icon="fa-graduation-cap">
                                <field name="program_count" widget="statinfo" string="Programs"/>
                            </button>
                            <button name="action_view_students" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="student_count" widget="statinfo" string="Students"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="University Name"/>
                                <span class="badge badge-info" invisible="not is_main">Main University</span>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="short_name"/>
                                <field name="established_year"/>
                                <field name="is_main"/>
                            </group>
                            <group>
                                <field name="city"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="zip"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="email"/>
                                <field name="website"/>
                            </group>
                            <group>
                                <field name="logo" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" nolabel="1"/>
                                <field name="accreditation" nolabel="1"/>
                            </page>
                            
                            <page string="Address" name="address">
                                <field name="address" nolabel="1"/>
                                <field name="full_address" nolabel="1" readonly="1"/>
                            </page>
                            
                            <page string="Colleges" name="colleges" invisible="not college_count">
                                <field name="college_ids" readonly="1">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="dean_id"/>
                                        <field name="program_count"/>
                                        <field name="student_count"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Colleges" name="colleges" invisible="not college_count">
                                <field name="college_ids" readonly="1">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="dean_id"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- University Search View -->
        <record id="view_acmst_university_search" model="ir.ui.view">
            <field name="name">acmst.university.search</field>
            <field name="model">acmst.university</field>
            <field name="arch" type="xml">
                <search string="Search Universities">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="short_name"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="established_year"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Main University" name="main" domain="[('is_main', '=', True)]"/>
                    <separator/>
                    <filter string="This Year" name="this_year" domain="[('established_year', '=', context_today().year)]"/>
                    <filter string="Recent" name="recent" domain="[('established_year', '>=', context_today().year - 5)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                        <filter string="Established Year" name="group_year" context="{'group_by': 'established_year'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- University Kanban View -->
        <record id="view_acmst_university_kanban" model="ir.ui.view">
            <field name="name">acmst.university.kanban</field>
            <field name="model">acmst.university</field>
            <field name="arch" type="xml">
                <kanban string="Universities" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="college_count"/>
                    <field name="program_count"/>
                    <field name="student_count"/>
                    <field name="is_main"/>
                    <field name="active"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                                <span class="badge badge-info" invisible="not is_main">Main</span>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="code"/> - <field name="city"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <div class="o_kanban_record_bottom">
                                                <div class="oe_kanban_bottom_left">
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-building"/> <field name="college_count"/>
                                                    </span>
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-graduation-cap"/> <field name="program_count"/>
                                                    </span>
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-users"/> <field name="student_count"/>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- University Action -->
        <record id="action_acmst_university" model="ir.actions.act_window">
            <field name="name">Universities</field>
            <field name="res_model">acmst.university</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first university!
                </p>
                <p>
                    Universities are the top-level institutions in your academic system.
                    Each university can have multiple colleges and programs.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
