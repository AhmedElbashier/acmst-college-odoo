<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Academic Rules Tree View -->
        <record id="view_acmst_academic_rules_tree" model="ir.ui.view">
            <field name="name">acmst.academic.rules.tree</field>
            <field name="model">acmst.academic.rules</field>
            <field name="arch" type="xml">
                <tree string="Academic Rules" decoration-info="not active" decoration-success="is_mandatory" decoration-warning="not is_active">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="rule_type"/>
                    <field name="category"/>
                    <field name="priority"/>
                    <field name="rule_level"/>
                    <field name="university_id"/>
                    <field name="college_id"/>
                    <field name="program_id"/>
                    <field name="effective_date"/>
                    <field name="expiry_date"/>
                    <field name="is_active" invisible="1"/>
                    <field name="is_mandatory" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Academic Rules Form View -->
        <record id="view_acmst_academic_rules_form" model="ir.ui.view">
            <field name="name">acmst.academic.rules.form</field>
            <field name="model">acmst.academic.rules</field>
            <field name="arch" type="xml">
                <form string="Academic Rule">
                    <header>
                        <button name="action_view_related_rules" type="object" string="View Related Rules" class="btn-secondary" invisible="not related_rule_ids"/>
                        <button name="action_view_child_rules" type="object" string="View Child Rules" class="btn-info" invisible="not child_rule_ids"/>
                        <button name="action_activate_rule" type="object" string="Activate Rule" class="btn-success" invisible="is_active"/>
                        <button name="action_deactivate_rule" type="object" string="Deactivate Rule" class="btn-warning" invisible="not is_active"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Rule Name"/>
                                <span class="badge badge-success" invisible="not is_mandatory">Mandatory</span>
                                <span class="badge badge-info" invisible="not is_active">Active</span>
                                <span class="badge badge-warning" invisible="is_active">Inactive</span>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="rule_type"/>
                                <field name="category"/>
                                <field name="priority"/>
                            </group>
                            <group>
                                <field name="rule_level" readonly="1"/>
                                <field name="is_mandatory"/>
                                <field name="requires_approval"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="university_id" options="{'no_create': True}"/>
                                <field name="college_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="program_id" options="{'no_create': True}"/>
                                <field name="program_type_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="effective_date"/>
                                <field name="expiry_date"/>
                            </group>
                            <group>
                                <field name="is_active" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" nolabel="1"/>
                            </page>
                            
                            <page string="Rule Details" name="rule_details">
                                <field name="rule_text" nolabel="1"/>
                            </page>
                            
                            <page string="Conditions" name="conditions">
                                <field name="conditions" nolabel="1"/>
                                <field name="exceptions" nolabel="1"/>
                            </page>
                            
                            <page string="Related Rules" name="related_rules" invisible="not related_rule_ids">
                                <field name="related_rule_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="rule_type"/>
                                        <field name="priority"/>
                                        <field name="is_active"/>
                                        <field name="is_mandatory"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Child Rules" name="child_rules" invisible="not child_rule_ids">
                                <field name="child_rule_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="rule_type"/>
                                        <field name="priority"/>
                                        <field name="is_active"/>
                                        <field name="is_mandatory"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Hierarchy" name="hierarchy">
                                <group>
                                    <group>
                                        <field name="parent_rule_id" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="rule_level" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Academic Rules Search View -->
        <record id="view_acmst_academic_rules_search" model="ir.ui.view">
            <field name="name">acmst.academic.rules.search</field>
            <field name="model">acmst.academic.rules</field>
            <field name="arch" type="xml">
                <search string="Search Academic Rules">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="rule_text"/>
                    <field name="university_id"/>
                    <field name="college_id"/>
                    <field name="program_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Currently Active" name="currently_active" domain="[('is_active', '=', True)]"/>
                    <filter string="Mandatory" name="mandatory" domain="[('is_mandatory', '=', True)]"/>
                    <filter string="Requires Approval" name="requires_approval" domain="[('requires_approval', '=', True)]"/>
                    <separator/>
                    <filter string="Attendance" name="attendance" domain="[('rule_type', '=', 'attendance')]"/>
                    <filter string="Grading" name="grading" domain="[('rule_type', '=', 'grading')]"/>
                    <filter string="Promotion" name="promotion" domain="[('rule_type', '=', 'promotion')]"/>
                    <filter string="Graduation" name="graduation" domain="[('rule_type', '=', 'graduation')]"/>
                    <filter string="Academic Integrity" name="academic_integrity" domain="[('rule_type', '=', 'academic_integrity')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Rule Type" name="group_rule_type" context="{'group_by': 'rule_type'}"/>
                        <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                        <filter string="Rule Level" name="group_rule_level" context="{'group_by': 'rule_level'}"/>
                        <filter string="University" name="group_university" context="{'group_by': 'university_id'}"/>
                        <filter string="College" name="group_college" context="{'group_by': 'college_id'}"/>
                        <filter string="Program" name="group_program" context="{'group_by': 'program_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Academic Rules Kanban View -->
        <record id="view_acmst_academic_rules_kanban" model="ir.ui.view">
            <field name="name">acmst.academic.rules.kanban</field>
            <field name="model">acmst.academic.rules</field>
            <field name="arch" type="xml">
                <kanban string="Academic Rules" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="rule_type"/>
                    <field name="category"/>
                    <field name="priority"/>
                    <field name="rule_level"/>
                    <field name="university_id"/>
                    <field name="college_id"/>
                    <field name="program_id"/>
                    <field name="effective_date"/>
                    <field name="expiry_date"/>
                    <field name="is_active"/>
                    <field name="is_mandatory"/>
                    <field name="active"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                                <span class="badge badge-success" invisible="not is_mandatory">Mandatory</span>
                                                <span class="badge badge-info" invisible="not is_active">Active</span>
                                                <span class="badge badge-warning" invisible="is_active">Inactive</span>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="code"/> - <field name="rule_type"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <div class="o_kanban_record_bottom">
                                                <div class="oe_kanban_bottom_left">
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-tag"/> <field name="category"/>
                                                    </span>
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-flag"/> <field name="priority"/>
                                                    </span>
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-level-up"/> <field name="rule_level"/>
                                                    </span>
                                                </div>
                                                <div class="oe_kanban_bottom_right">
                                                    <field name="effective_date"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Academic Rules Action -->
        <record id="action_acmst_academic_rules" model="ir.actions.act_window">
            <field name="name">Academic Rules</field>
            <field name="res_model">acmst.academic.rules</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first academic rule!
                </p>
                <p>
                    Academic rules define policies and regulations for academic programs.
                    Rules can be set at university, college, or program level with different priorities.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
