<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Program Tree View -->
        <record id="view_acmst_program_tree" model="ir.ui.view">
            <field name="name">acmst.program.tree</field>
            <field name="model">acmst.program</field>
            <field name="arch" type="xml">
                <tree string="Programs" decoration-info="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="college_id"/>
                    <field name="program_type_id"/>
                    <field name="manager_id"/>
                    <field name="coordinator_id"/>
                    <field name="credits_required"/>
                    <field name="duration_years"/>
                    <field name="batch_count"/>
                    <field name="student_count"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Program Form View -->
        <record id="view_acmst_program_form" model="ir.ui.view">
            <field name="name">acmst.program.form</field>
            <field name="model">acmst.program</field>
            <field name="arch" type="xml">
                <form string="Program">
                    <header>
                        <button name="action_view_batches" type="object" string="View Batches" class="btn-primary" invisible="not batch_count"/>
                        <button name="action_view_students" type="object" string="View Students" class="btn-secondary" invisible="not student_count"/>
                        <button name="action_view_courses" type="object" string="View Courses" class="btn-secondary" invisible="not course_count"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_batches" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="batch_count" widget="statinfo" string="Batches"/>
                            </button>
                            <button name="action_view_students" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="student_count" widget="statinfo" string="Students"/>
                            </button>
                            <button name="action_view_courses" type="object" class="oe_stat_button" icon="fa-book">
                                <field name="course_count" widget="statinfo" string="Courses"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Program Name"/>
                                <span class="badge badge-info" invisible="not is_online">Online</span>
                                <span class="badge badge-warning" invisible="not is_part_time">Part-time</span>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="short_name"/>
                                <field name="college_id" options="{'no_create': True}"/>
                                <field name="program_type_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="manager_id" options="{'no_create': True}"/>
                                <field name="coordinator_id" options="{'no_create': True}"/>
                                <field name="credits_required"/>
                                <field name="duration_years"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="is_online"/>
                                <field name="is_part_time"/>
                                <field name="is_thesis_required"/>
                                <field name="is_internship_required"/>
                            </group>
                            <group>
                                <field name="internship_credits" invisible="not is_internship_required"/>
                                <field name="thesis_credits" invisible="not is_thesis_required"/>
                                <field name="max_duration_years"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" nolabel="1"/>
                                <field name="objectives" nolabel="1"/>
                                <field name="learning_outcomes" nolabel="1"/>
                                <field name="admission_requirements" nolabel="1"/>
                            </page>
                            
                            <page string="Batches" name="batches" invisible="not batch_count">
                                <field name="batch_ids" readonly="1">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="academic_year_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="max_students"/>
                                        <field name="current_students"/>
                                        <field name="state"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Personnel" name="personnel">
                                <group>
                                    <group>
                                        <field name="manager_id" readonly="1"/>
                                        <field name="coordinator_id" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="college_id" readonly="1"/>
                                        <field name="university_id" readonly="1"/>
                                        <field name="program_type_id" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Program Search View -->
        <record id="view_acmst_program_search" model="ir.ui.view">
            <field name="name">acmst.program.search</field>
            <field name="model">acmst.program</field>
            <field name="arch" type="xml">
                <search string="Search Programs">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="short_name"/>
                    <field name="college_id"/>
                    <field name="program_type_id"/>
                    <field name="manager_id"/>
                    <field name="coordinator_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Online Programs" name="online" domain="[('is_online', '=', True)]"/>
                    <filter string="Part-time Programs" name="part_time" domain="[('is_part_time', '=', True)]"/>
                    <filter string="Thesis Required" name="thesis" domain="[('is_thesis_required', '=', True)]"/>
                    <filter string="Internship Required" name="internship" domain="[('is_internship_required', '=', True)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="College" name="group_college" context="{'group_by': 'college_id'}"/>
                        <filter string="Program Type" name="group_program_type" context="{'group_by': 'program_type_id'}"/>
                        <filter string="Manager" name="group_manager" context="{'group_by': 'manager_id'}"/>
                        <filter string="Coordinator" name="group_coordinator" context="{'group_by': 'coordinator_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Program Kanban View -->
        <record id="view_acmst_program_kanban" model="ir.ui.view">
            <field name="name">acmst.program.kanban</field>
            <field name="model">acmst.program</field>
            <field name="arch" type="xml">
                <kanban string="Programs" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="college_id"/>
                    <field name="program_type_id"/>
                    <field name="manager_id"/>
                    <field name="coordinator_id"/>
                    <field name="batch_count"/>
                    <field name="student_count"/>
                    <field name="is_online"/>
                    <field name="is_part_time"/>
                    <field name="active"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                                <span class="badge badge-info" invisible="not is_online">Online</span>
                                                <span class="badge badge-warning" invisible="not is_part_time">Part-time</span>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="code"/> - <field name="college_id"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <div class="o_kanban_record_bottom">
                                                <div class="oe_kanban_bottom_left">
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-calendar"/> <field name="batch_count"/>
                                                    </span>
                                                    <span class="o_kanban_inline_block">
                                                        <i class="fa fa-users"/> <field name="student_count"/>
                                                    </span>
                                                </div>
                                                <div class="oe_kanban_bottom_right">
                                                    <field name="manager_id" widget="many2one_avatar"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Program Action -->
        <record id="action_acmst_program" model="ir.actions.act_window">
            <field name="name">Programs</field>
            <field name="res_model">acmst.program</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first program!
                </p>
                <p>
                    Programs are specific academic offerings within colleges.
                    Each program has a manager and coordinator responsible for its operation.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
