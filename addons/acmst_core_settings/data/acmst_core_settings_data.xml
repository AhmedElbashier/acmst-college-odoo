            <field name="end_date">2029-08-31</field>
            <field name="registration_start_date">2024-06-01</field>
            <field name="registration_end_date">2024-08-31</field>
            <field name="max_students">30</field>
            <field name="state">open</field>
            <field name="description">Pharmacy program batch for academic year 2024-2025</field>
        </record>
        
        <record id="batch_medical_lab_2024" model="acmst.batch">
            <field name="name">Medical Lab Batch 2024</field>
            <field name="code">MLS-BSC-2024-B01</field>
            <field name="program_id" ref="program_medical_lab"/>
            <field name="academic_year_id" ref="academic_year_2024_2025"/>
            <field name="start_date">2024-09-01</field>
            <field name="end_date">2028-08-31</field>
            <field name="registration_start_date">2024-06-01</field>
