<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Document Rejection Wizard Form View -->
    <record id="view_acmst_document_rejection_wizard_form" model="ir.ui.view">
        <field name="name">acmst.document.rejection.wizard.form</field>
        <field name="model">acmst.document.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Document">
                <group>
                    <group col="6">
                        <field name="document_id" readonly="1" string="Document"/>
                    </group>
                    <group col="6">
                        <field name="rejection_reason" widget="text" required="1" placeholder="Please provide a detailed reason for rejecting this document..."/>
                    </group>
                </group>
                <footer>
                    <button name="action_reject" string="Reject Document" type="object" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Document Rejection Wizard Action -->
    <record id="action_acmst_document_rejection_wizard" model="ir.actions.act_window">
        <field name="name">Reject Document</field>
        <field name="res_model">acmst.document.rejection.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_acmst_document"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>