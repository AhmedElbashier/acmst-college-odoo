        </record>

        <record id="demo_approval_3" model="acmst.admission.approval">
            <field name="admission_file_id" ref="demo_admission_file_2"/>
            <field name="approver_id" ref="base.user_admin"/>
            <field name="approval_type">health</field>
            <field name="approval_date" eval="datetime.now()"/>
            <field name="decision">approved</field>
            <field name="comments">Health check completed and approved</field>
        </record>

    </data>
</odoo>
