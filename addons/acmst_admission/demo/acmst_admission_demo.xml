        <!-- Demo Admission Files -->
        <record id="demo_admission_file_1" model="acmst.admission.file">
            <field name="applicant_name">Ahmed Al-Rashid</field>
            <field name="national_id">1234567890</field>
            <field name="phone">+966501234567</field>
            <field name="email">ahmed.rashid@example.com</field>
            <field name="program_id" ref="acmst_core_settings.acmst_program_1"/>
            <field name="batch_id" ref="acmst_core_settings.acmst_batch_1"/>
