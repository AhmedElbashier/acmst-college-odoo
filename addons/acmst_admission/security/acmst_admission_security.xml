        <!-- Custom Category for Admission Module -->
        <record id="module_category_admission" model="ir.module.category">
            <field name="name">Admission Management</field>
            <field name="description">Admission management system categories</field>
            <field name="sequence">100</field>
        </record>

        <!-- Admission Management Subcategories -->
        <record id="module_category_admission_operations" model="ir.module.category">
            <field name="name">Admission Operations</field>
            <field name="description">Operational roles in admission management</field>
            <field name="parent_id" ref="module_category_admission"/>
            <field name="sequence">101</field>
        </record>

        <record id="module_category_admission_approvals" model="ir.module.category">
