        <record id="acmst_coordinator_condition_rule_coordinator" model="ir.rule">
            <field name="name">Coordinator Condition: Coordinator Access</field>
            <field name="model_id" ref="model_acmst_coordinator_condition"/>
            <field name="domain_force">[('coordinator_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_coordinator'))]"/>
            <field name="perm_read" eval="True"/>
