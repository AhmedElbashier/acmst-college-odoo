            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Coordinator Condition Rules -->
        <record id="acmst_coordinator_condition_rule_admin" model="ir.rule">
            <field name="name">Coordinator Condition: Admin Access</field>
            <field name="model_id" ref="model_acmst_coordinator_condition"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
