<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Custom Category for Admission Module -->
        <record id="module_category_admission" model="ir.module.category">
            <field name="name">Admission Management</field>
            <field name="description">Admission management system categories</field>
            <field name="sequence">100</field>
        </record>
        
        <!-- Security Groups -->
        <record id="acmst_admission.group_admin" model="res.groups">
            <field name="name">Admission Admin</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Full access to all admission functions</field>
        </record>

        <record id="acmst_admission.group_manager" model="res.groups">
            <field name="name">Admission Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Final approval authority for admission process</field>
        </record>

        <record id="acmst_admission.group_coordinator" model="res.groups">
            <field name="name">Program Coordinator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Academic approval authority for admission process</field>
        </record>

        <record id="acmst_admission.group_health" model="res.groups">
            <field name="name">Health Officer</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Medical assessment authority for admission process</field>
        </record>

        <record id="acmst_admission.group_officer" model="res.groups">
            <field name="name">Admission Officer</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">File processing and management for admission process</field>
        </record>

        <record id="acmst_admission.group_portal" model="res.groups">
            <field name="name">Portal User</field>
            <field name="category_id" ref="module_category_admission"/>
            <field name="comment">Limited access to own applications</field>
        </record>

        <record id="acmst_admission.group_workflow_admin" model="res.groups">
            <field name="name">Workflow Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can manage workflow engines and rules</field>
        </record>

        <!-- Record Rules -->
        
        <!-- Admission File Rules -->
        <record id="acmst_admission_file_rule_admin" model="ir.rule">
            <field name="name">Admission File: Admin Access</field>
            <field name="model_id" ref="model_acmst_admission_file"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="acmst_admission_file_rule_manager" model="ir.rule">
            <field name="name">Admission File: Manager Access</field>
            <field name="model_id" ref="model_acmst_admission_file"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="acmst_admission_file_rule_coordinator" model="ir.rule">
            <field name="name">Admission File: Coordinator Access</field>
            <field name="model_id" ref="model_acmst_admission_file"/>
            <field name="domain_force">[
                '|',
                ('coordinator_id', '=', user.id),
                ('state', 'in', ['coordinator_review', 'coordinator_conditional'])
            ]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_coordinator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="acmst_admission_file_rule_health" model="ir.rule">
            <field name="name">Admission File: Health Access</field>
            <field name="model_id" ref="model_acmst_admission_file"/>
            <field name="domain_force">[('state', 'in', ['health_required', 'health_approved', 'health_rejected'])]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_health'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="acmst_admission_file_rule_officer" model="ir.rule">
            <field name="name">Admission File: Officer Access</field>
            <field name="model_id" ref="model_acmst_admission_file"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

