<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Health Check Tree View -->
        <record id="view_acmst_health_check_tree" model="ir.ui.view">
            <field name="name">acmst.health.check.tree</field>
            <field name="model">acmst.health.check</field>
            <field name="arch" type="xml">
                <tree string="Health Checks" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-info="state == 'submitted'" decoration-warning="state == 'draft'" duplicate="False">
                    <field name="profile_picture" widget="image" options="{'size': [40, 40]}" string="Photo" optional="hide"/>
                    <field name="name" string="Health Check"/>
                    <field name="admission_file_id" string="File #" optional="hide"/>
                    <field name="applicant_name" string="Applicant"/>
                    <field name="university_id" string="University ID" optional="hide" readonly="1"/>
                    <field name="program_name" string="Program"/>
                    <field name="check_date" string="Check Date"/>
                    <field name="examiner_id" string="Examiner"/>
                    <field name="medical_fitness" string="Fitness" optional="hide"/>
                    <field name="height" string="Height (cm)" optional="hide"/>
                    <field name="weight" string="Weight (kg)" optional="hide"/>
                    <field name="bmi" string="BMI" optional="hide"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>

        <!-- Health Check Kanban View -->
        <record id="view_acmst_health_check_kanban" model="ir.ui.view">
            <field name="name">acmst.health.check.kanban</field>
            <field name="model">acmst.health.check</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" string="Health Checks" duplicate="False">
                    <field name="name"/>
                    <field name="applicant_name"/>
                    <field name="program_name"/>
                    <field name="batch_name"/>
                    <field name="check_date"/>
                    <field name="examiner_id"/>
                    <field name="medical_fitness"/>
                    <field name="state"/>
                    <field name="profile_picture"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="profile_picture" widget="image" class="oe_avatar" alt="Photo"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <strong>
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <field name="applicant_name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Program:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="program_name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Batch:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="batch_name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Date:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="check_date"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Examiner:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="examiner_id"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Fitness:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="medical_fitness" widget="badge" decoration-success="medical_fitness == 'fit'" decoration-warning="medical_fitness == 'conditional'" decoration-danger="medical_fitness == 'unfit'"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Status:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-warning="state == 'submitted'" decoration-danger="state == 'rejected'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Health Check Form View -->
        <record id="view_acmst_health_check_form" model="ir.ui.view">
            <field name="name">acmst.health.check.form</field>
            <field name="model">acmst.health.check</field>
            <field name="arch" type="xml">
                <form string="Health Check" duplicate="False">
                    <header>
                        <button name="action_submit" string="Submit for Review" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve Health Check" type="object" class="btn-success" invisible="state != 'submitted'"/>
                        <button name="action_reject" string="Reject Health Check" type="object" class="btn-danger" invisible="state != 'submitted'"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-secondary" invisible="state not in ['submitted', 'rejected']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <div class="row">
                                <div class="col-md-8">
                                    <h1>
                                        <field name="admission_file_id" readonly="1"/>
                                    </h1>
                                    <h2>
                                        <field name="applicant_name" readonly="1"/>
                                    </h2>
                                </div>
                                <div class="col-md-4 text-right">
                                    <div class="oe_avatar">
                                        <field name="profile_picture" widget="image" class="oe_avatar_image" options="{'size': [100, 100]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group string="Student Information">
                                <field name="applicant_name" readonly="1"/>
                                <field name="applicant_name_arabic" readonly="1"/>
                                <field name="national_id" readonly="1"/>
                                <field name="id_type" readonly="1"/>
                                <field name="university_id" readonly="1"/>
                                <field name="phone" readonly="1"/>
                                <field name="email" readonly="1"/>
                                <field name="birth_date" readonly="1"/>
                                <field name="age" readonly="1"/>
                                <field name="gender" readonly="1"/>
                                <field name="nationality" readonly="1"/>
                                <field name="religion" readonly="1"/>
                                <field name="address" readonly="1"/>
                                <field name="emergency_contact" readonly="1"/>
                                <field name="emergency_phone" readonly="1"/>
                                <field name="guardian_name" readonly="1"/>
                                <field name="guardian_relationship" readonly="1"/>
                                <field name="guardian_phone" readonly="1"/>
                                <field name="program_name" readonly="1"/>
                                <field name="batch_name" readonly="1"/>
                                <field name="admission_type" readonly="1"/>
                            </group>
                            <group string="Health Check Information">
                                <field name="name" readonly="1"/>
                                <field name="check_date"/>
                                <field name="examiner_id"/>
                                <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected"/>
                                <field name="height"/>
                                <field name="weight"/>
                                <field name="bmi" readonly="1"/>
                                <field name="blood_type"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Health Questionnaire">
                                <group>
                                    <group string="Medical History">
                                        <field name="has_chronic_diseases"/>
                                        <field name="chronic_diseases_details" invisible="not has_chronic_diseases" required="has_chronic_diseases"/>
                                        <field name="takes_medications"/>
                                        <field name="medications_details" invisible="not takes_medications" required="takes_medications"/>
                                    </group>
                                    <group string="Allergies &amp; Disabilities">
                                        <field name="has_allergies"/>
                                        <field name="allergies_details" invisible="not has_allergies" required="has_allergies"/>
                                        <field name="has_disabilities"/>
                                        <field name="disabilities_details" invisible="not has_disabilities" required="has_disabilities"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Medical Assessment">
                                <group>
                                    <group string="Assessment">
                                        <field name="medical_fitness" required="1"/>
                                        <field name="medical_notes"/>
                                        <field name="restrictions"/>
                                    </group>
                                    <group string="Follow-up">
                                        <field name="follow_up_required"/>
                                        <field name="follow_up_date" invisible="not follow_up_required" required="follow_up_required"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Attachments">
                                <group>
                                    <div class="alert alert-info">
                                        <i class="fa fa-info-circle" title="Information"></i>
                                        <strong>Medical Documents:</strong> Upload medical reports, lab results, and other health-related documents.
                                    </div>
                                </group>
                                <group>
                                    <group string="Medical Documents" col="4">
                                        <field name="medical_reports" filename="medical_reports_filename" widget="many2many_binary"/>
                                        <field name="lab_results" filename="lab_results_filename" widget="many2many_binary"/>
                                        <field name="other_documents" filename="other_documents_filename" widget="many2many_binary"/>
                                    </group>
                                    <group string="Document Requirements" col="4">
                                        <div class="alert alert-info">
                                            <i class="fa fa-info-circle" title="Information"></i>
                                            <strong>Health Check Documents:</strong> Upload medical reports, lab results, and other health-related documents.
                                            <br/>
                                            <small>Multiple files allowed. PDF, DOC, DOCX, JPG, PNG formats accepted. Maximum 10MB per file.</small>
                                        </div>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Health Check Search View -->
        <record id="view_acmst_health_check_search" model="ir.ui.view">
            <field name="name">acmst.health.check.search</field>
            <field name="model">acmst.health.check</field>
            <field name="arch" type="xml">
                <search string="Search Health Checks">
                    <field name="name" string="Health Check"/>
                    <field name="admission_file_id" string="File #"/>
                    <field name="applicant_name" string="Applicant"/>
                    <field name="applicant_name_arabic" string="Applicant (Arabic)"/>
                    <field name="university_id" string="University ID" readonly="1"/>
                    <field name="national_id" string="National ID"/>
                    <field name="examiner_id" string="Examiner"/>
                    <field name="medical_fitness" string="Fitness"/>
                    <field name="state" string="Status"/>
                    <separator/>
                    <filter string="Pending (Draft)" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Under Review" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <separator/>
                    <filter string="Medically Fit" name="fit" domain="[('medical_fitness', '=', 'fit')]"/>
                    <filter string="Medically Unfit" name="unfit" domain="[('medical_fitness', '=', 'unfit')]"/>
                    <filter string="Conditionally Fit" name="conditional" domain="[('medical_fitness', '=', 'conditional')]"/>
                    <separator/>
                    <filter string="ðŸŽ“ Has University ID" name="has_university_id" domain="[('university_id', '!=', False)]"/>
                    <filter string="ðŸ“‹ Without University ID" name="without_university_id" domain="[('university_id', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Examiner" name="group_examiner" context="{'group_by': 'examiner_id'}"/>
                        <filter string="Medical Fitness" name="group_fitness" context="{'group_by': 'medical_fitness'}"/>
                        <filter string="Check Date" name="group_date" context="{'group_by': 'check_date:day'}"/>
                        <filter string="Program" name="group_program" context="{'group_by': 'program_name'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Health Check Action -->
        <record id="action_acmst_health_check" model="ir.actions.act_window">
            <field name="name">Health Checks</field>
            <field name="res_model">acmst.health.check</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_acmst_health_check_search"/>
            <field name="context">{'create': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No health checks found
                </p>
                <p>
                    Health checks are automatically created when admission applications require medical assessment.
                </p>
            </field>
        </record>

    </data>
</odoo>
