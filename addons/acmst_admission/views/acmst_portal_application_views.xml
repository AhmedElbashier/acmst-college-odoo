<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Portal Application Tree View -->
        <record id="view_acmst_portal_application_tree" model="ir.ui.view">
            <field name="name">acmst.portal.application.tree</field>
            <field name="model">acmst.portal.application</field>
            <field name="arch" type="xml">
                <tree string="Portal Applications" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-info="state == 'submitted'">
                    <field name="profile_picture" widget="image" options="{'size': [40, 40]}" string="Photo"/>
                    <field name="name" string="Application Number"/>
                    <field name="applicant_name_english" string="Applicant"/>
                    <field name="national_id" string="National ID"/>
                    <field name="university_id" string="University ID" readonly="1"/>
                    <field name="is_processing_student" string="Processing Student" widget="boolean"/>
                    <field name="email" string="Email"/>
                    <field name="program_name" string="Program"/>
                    <field name="batch_name" string="Batch"/>
                    <field name="state" string="State"/>
                    <field name="submission_date" string="Submission Date"/>
                    <field name="admission_file_id" string="Admission File"/>
                </tree>
            </field>
        </record>

        <!-- Portal Application Kanban View -->
        <record id="view_acmst_portal_application_kanban" model="ir.ui.view">
            <field name="name">acmst.portal.application.kanban</field>
            <field name="model">acmst.portal.application</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" string="Portal Applications" duplicate="False">
                    <field name="name"/>
                    <field name="applicant_name_english"/>
                    <field name="university_id"/>
                    <field name="program_name"/>
                    <field name="batch_name"/>
                    <field name="state"/>
                    <field name="submission_date"/>
                    <field name="profile_picture"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="profile_picture" widget="image" class="oe_avatar" alt="Photo"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <strong>
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <field name="applicant_name_english"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Program:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="program_name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Batch:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="batch_name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>University ID:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="university_id"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Status:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-warning="state in ['submitted', 'processing']" decoration-info="state == 'draft'"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <strong>Submitted:</strong>
                                            <field name="submission_date"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Portal Application Form View -->
        <record id="view_acmst_portal_application_form" model="ir.ui.view">
            <field name="name">acmst.portal.application.form</field>
            <field name="model">acmst.portal.application</field>
            <field name="arch" type="xml">
                <form string="Portal Application">
                    <header>
                        <button name="action_submit" string="Submit Application" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <!-- <button name="action_review" string="Review Application" type="object" class="btn-info" invisible="state != 'submitted'"/>-->
                        <button name="action_submit_to_ministry" string="Submit to Ministry" type="object" class="btn-warning" invisible="state != 'submitted'"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-success" invisible="state != 'under_review'"/>
                        <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible="state != 'under_review'"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" invisible="state in ['approved', 'cancelled']"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-secondary" invisible="state not in ['submitted', 'rejected']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,under_review,approved,rejected,cancelled"/>
                        <field name="submitted_to_ministry" invisible="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <div class="row">
                                <div class="col-md-8">
                                    <h1>
                                        <field name="name" readonly="1"/>
                                    </h1>
                                    <div style="margin-top: 5px;">
                                        <span style="font-size: 14px; font-weight: bold; color: #666;">
                                            Admission Type: <field name="admission_type" class="font-weight-normal" style="font-size: 13px;" readonly="1"/>
                                        </span>
                                    </div>
                                    <div style="margin-top: 3px;">
                                        <span style="font-size: 14px; font-weight: bold; color: #666;">
                                            University ID: <field name="university_id" class="font-weight-normal" style="font-size: 13px;" readonly="1"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-right">
                                    <div class="oe_avatar">
                                        <field name="profile_picture" widget="image" class="oe_avatar_image" options="{'size': [100, 100]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group string="Basic Information">
                                <field name="applicant_name_english" placeholder="Enter full name in English"/>
                                <field name="applicant_name_arabic" placeholder="Ø£Ø¯Ø®Ù„ Ø§Ù„Ø§Ø³Ù… Ø§Ù„ÙƒØ§Ù…Ù„ Ø¨Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©"/>
                                <field name="id_type"/>
                                <field name="national_id"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="submission_date" readonly="1"/>
                            </group>
                            <group string="Program Information">
                                <field name="admission_type"/>
                                <field name="program_id"/>
                                <field name="batch_id"/>
                                <field name="admission_file_id" readonly="1"/>
                            </group>
                            <group string="University Information">
                                <field name="university_id" readonly="1"/>
                                <!-- <field name="is_processing_student"/> -->
                                <field name="university_id_updated_date" readonly="1"/>
                                <field name="university_id_updated_by" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Personal Information">
                                <!-- Birth Information -->
                                <group>
                                    <group string="Birth Information" col="2">
                                        <field name="birth_date"/>
                                        <field name="place_of_birth" placeholder="Enter city/country of birth"/>
                                        <field name="age" readonly="1"/>
                                    </group>
                                    <group string="Personal Details" col="2">
                                        <field name="gender"/>
                                        <field name="nationality"/>
                                        <field name="religion"/>
                                    </group>
                                </group>

                                <!-- ID Document Upload -->
                                <group>
                                    <group string="ID Document Upload" col="4">
                                        <field name="id_document" filename="id_document_filename" required="1"/>
                                        <field name="id_document_filename" invisible="1"/>
                                    </group>
                                </group>

                                <!-- Contact Information -->
                                <group>
                                    <group string="Contact Information" col="2">
                                        <field name="address" widget="text" placeholder="Enter full address"/>
                                        <field name="emergency_contact" placeholder="Enter emergency contact name"/>
                                        <field name="emergency_phone" placeholder="Enter emergency contact phone"/>
                                    </group>
                                    <group string="University Information" col="2">
                                        <field name="university_id" readonly="1"/>
                                        <!-- <field name="is_processing_student" widget="boolean"/> -->
                                        <field name="university_id_updated_date" readonly="1"/>
                                        <field name="university_id_updated_by" readonly="1"/>
                                    </group>
                                </group>

                                <!-- Supporting Documents -->
                                <group>
                                    <group string="Supporting Documents" col="4">
                                        <field name="support_document_ids" widget="many2many_binary" nolabel="1">
                                            <tree>
                                                <field name="name"/>
                                                <field name="document_type"/>
                                                <field name="file_size"/>
                                            </tree>
                                            <form>
                                                <group>
                                                    <group>
                                                        <field name="name"/>
                                                        <field name="document_type"/>
                                                        <field name="file" filename="filename"/>
                                                    </group>
                                                </group>
                                            </form>
                                        </field>
                                    </group>

                                </group>

                            </page>
                            <page string="Academic Information">
                                <!-- Educational Background -->
                                <group>
                                    <group string="Previous Education" col="6">
                                        <field name="previous_education" widget="text" placeholder="Describe your previous educational background, degrees, and qualifications"/>
                                    </group>
                                </group>

                                <!-- Institution Information -->
                                <group>
                                    <group string="Institution Details" col="2">
                                        <field name="education_institution" placeholder="Enter institution name"/>
                                        <field name="education_program" placeholder="Enter program/degree"/>
                                    </group>
                                    <group string="Education Details" col="2">
                                        <field name="education_college" placeholder="Enter college/school"/>
                                        <field name="education_major" placeholder="Enter major field of study"/>
                                    </group>
                                </group>

                                <!-- Education Timeline -->
                                <group>
                                    <group string="Timeline" col="2">
                                        <field name="education_start_year" placeholder="e.g., 2020"/>
                                        <field name="education_completion_year" placeholder="e.g., 2024"/>
                                        <field name="certificate_type"/>
                                        <field name="education_duration_years" placeholder="Duration in years"/>
                                    </group>
                                </group>

                                <!-- Academic Documents -->
                                <group>
                                    <group string="Academic Documents" col="4">
                                        <field name="academic_document_ids" widget="many2many_binary" nolabel="1">
                                            <tree>
                                                <field name="name"/>
                                                <field name="document_type"/>
                                                <field name="file_size"/>
                                            </tree>
                                            <form>
                                                <group>
                                                    <group>
                                                        <field name="name"/>
                                                        <field name="document_type"/>
                                                        <field name="file" filename="filename"/>
                                                    </group>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                                </group>
                            </page>
                            <page string="Guardian Information">
                                <field name="guardian_ids" mode="tree" context="{'default_portal_application_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="name" required="1"/>
                                        <field name="relationship" required="1"/>
                                        <field name="phone" required="1"/>
                                        <field name="email"/>
                                        <field name="is_default" widget="boolean_toggle"/>
                                        <field name="is_active" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="name" required="1"/>
                                                <field name="relationship" required="1"/>
                                                <field name="phone" required="1"/>
                                            </group>
                                            <group>
                                                <field name="email"/>
                                                <field name="is_default" widget="boolean_toggle"/>
                                                <field name="is_active"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Academic Information">
                                <!-- Educational Background -->
                                <group>
                                    <group string="Previous Education" col="6">
                                        <field name="previous_education" widget="text" placeholder="Describe your previous educational background, degrees, and qualifications"/>
                                    </group>
                                </group>

                                <!-- Institution Information -->
                                <group>
                                    <group string="Institution Details" col="2">
                                        <field name="education_institution" placeholder="Enter institution name"/>
                                        <field name="education_program" placeholder="Enter program/degree"/>
                                    </group>
                                    <group string="Education Details" col="2">
                                        <field name="education_college" placeholder="Enter college/school"/>
                                        <field name="education_major" placeholder="Enter major field of study"/>
                                    </group>
                                </group>

                                <!-- Education Timeline -->
                                <group>
                                    <group string="Timeline" col="2">
                                        <field name="education_start_year" placeholder="e.g., 2020"/>
                                        <field name="education_completion_year" placeholder="e.g., 2024"/>
                                        <field name="certificate_type"/>
                                        <field name="education_duration_years" placeholder="Duration in years"/>
                                    </group>
                                    <group string="Documents" col="8">
                                        <field name="documents" filename="documents_filename"/>
                                    </group>
                                </group>
                            </page>
                            <page string="System Information" invisible="not portal_user_id">
                                <group>
                                    <group>
                                        <field name="portal_user_id" readonly="1"/>
                                        <field name="ip_address" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="user_agent" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Portal Application Search View -->
        <record id="view_acmst_portal_application_search" model="ir.ui.view">
            <field name="name">acmst.portal.application.search</field>
            <field name="model">acmst.portal.application</field>
            <field name="arch" type="xml">
                <search string="Search Portal Applications">
                    <field name="name" string="Application Number"/>
                    <field name="applicant_name_english" string="Applicant"/>
                    <field name="national_id" string="National ID"/>
                    <field name="university_id" string="University ID" readonly="1"/>
                    <field name="email" string="Email"/>
                    <field name="program_id" string="Program"/>
                    <field name="batch_id" string="Batch"/>
                    <field name="state" string="State"/>
                    <separator/>
                    <!-- Status Filters -->
                    <filter string="ðŸ†• Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="ðŸ“¤ Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="ðŸ‘€ Under Review" name="under_review" domain="[('state', '=', 'under_review')]"/>
                    <filter string="âœ… Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="âŒ Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <filter string="ðŸš« Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <!-- Special Filters -->
                    <filter string="ðŸ‘¤ My Applications" name="my_applications" domain="[('portal_user_id', '=', uid)]"/>
                    <filter string="ðŸŽ“ Has University ID" name="has_university_id" domain="[('university_id', '!=', False)]"/>
                    <filter string="â³ Processing Students" name="processing_students" domain="[('is_processing_student', '=', True)]"/>
                    <filter string="ðŸ“‹ Without University ID" name="without_university_id" domain="[('university_id', '=', False)]"/>
                    <separator/>
                    <!-- Quick Status Groups -->
                    <filter string="ðŸ“‹ All Pending" name="all_pending" domain="[('state', 'in', ['submitted', 'under_review'])]"/>
                    <filter string="âœ… All Approved" name="all_approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="âŒ All Rejected" name="all_rejected" domain="[('state', 'in', ['rejected', 'cancelled'])]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Program" name="group_program" context="{'group_by': 'program_id'}"/>
                        <filter string="Batch" name="group_batch" context="{'group_by': 'batch_id'}"/>
                        <filter string="Submission Date" name="group_date" context="{'group_by': 'submission_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Portal Application Action -->
        <record id="action_acmst_portal_application" model="ir.actions.act_window">
            <field name="name">Portal Applications</field>
            <field name="res_model">acmst.portal.application</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_acmst_portal_application_search"/>
            <field name="context">{'create': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new portal application
                </p>
                <p>
                    Manage applications submitted through the public portal.
                </p>
            </field>
        </record>

    </data>
</odoo>

