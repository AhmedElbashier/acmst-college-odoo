<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Admission Wizard Form View -->
        <record id="view_acmst_admission_wizard_form" model="ir.ui.view">
            <field name="name">acmst.admission.wizard.form</field>
            <field name="model">acmst.admission.wizard</field>
            <field name="arch" type="xml">
                <form string="Admission Action Wizard">
                    <group>
                        <field name="admission_file_id" readonly="1"/>
                        <field name="action_type" required="1"/>
                        <field name="comments" placeholder="Enter comments about this action..."/>
                        <field name="send_notification"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Admission Wizard Action -->
        <record id="action_acmst_admission_wizard" model="ir.actions.act_window">
            <field name="name">Admission Action</field>
            <field name="res_model">acmst.admission.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'create': False}</field>
        </record>

    </data>
</odoo>
