<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Health Check Dashboard View -->
        <record id="view_acmst_health_dashboard" model="ir.ui.view">
            <field name="name">acmst.health.dashboard</field>
            <field name="model">acmst.health.check</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Health Check Dashboard">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_pending_health_checks" type="object" class="oe_stat_button" icon="fa-clock-o">
                                <field name="pending_health_checks_count" widget="statinfo" string="Pending Health Checks"/>
                            </button>
                            <button name="action_view_approved_health_checks" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="approved_health_checks_count" widget="statinfo" string="Approved Health Checks"/>
                            </button>
                            <button name="action_view_rejected_health_checks" type="object" class="oe_stat_button" icon="fa-times">
                                <field name="rejected_health_checks_count" widget="statinfo" string="Rejected Health Checks"/>
                            </button>
                            <button name="action_view_my_health_checks" type="object" class="oe_stat_button" icon="fa-user">
                                <field name="my_health_checks_count" widget="statinfo" string="My Health Checks"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>üè• Health Check Dashboard</h1>
                            <p>Comprehensive health check management and monitoring</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel panel-info">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">üìä Health Check Overview</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Total Health Checks</h4>
                                                    <span class="stat-number"><field name="total_health_checks" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Pending Review</h4>
                                                    <span class="stat-number"><field name="pending_health_checks_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Approved</h4>
                                                    <span class="stat-number"><field name="approved_health_checks_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Rejected</h4>
                                                    <span class="stat-number"><field name="rejected_health_checks_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">üë®‚Äç‚öïÔ∏è My Health Reviews</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="stat-box">
                                                    <h4>My Health Checks</h4>
                                                    <span class="stat-number"><field name="my_health_checks_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="stat-box">
                                                    <h4>Completion Rate</h4>
                                                    <span class="stat-number">
                                                        <field name="health_completion_rate" widget="statinfo" string="%"/>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">üìà Health Check Analytics</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <button name="action_view_health_statistics" type="object" class="btn btn-info btn-block">
                                            <i class="fa fa-bar-chart"></i> Health Statistics
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_medical_fitness_stats" type="object" class="btn btn-success btn-block">
                                            <i class="fa fa-heartbeat"></i> Fitness Analysis
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_examiner_performance" type="object" class="btn btn-warning btn-block">
                                            <i class="fa fa-user-md"></i> Examiner Performance
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_health_trends" type="object" class="btn btn-primary btn-block">
                                            <i class="fa fa-line-chart"></i> Health Trends
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Health Check Dashboard Action -->
        <record id="action_acmst_health_dashboard_main" model="ir.actions.act_window">
            <field name="name">Health Check Dashboard</field>
            <field name="res_model">acmst.health.check</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_acmst_health_dashboard"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to the Health Check Dashboard
                </p>
                <p>
                    This dashboard provides comprehensive health check management and analytics.
                </p>
            </field>
        </record>

    </data>
</odoo>
