<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Performance Optimization Tree View -->
    <record id="acmst_performance_optimization_tree_view" model="ir.ui.view">
        <field name="name">acmst.performance.optimization.tree</field>
        <field name="model">acmst.performance.optimization</field>
        <field name="arch" type="xml">
            <tree string="Performance Optimizations" decoration-info="status == 'pending'" 
                  decoration-success="status == 'completed'" 
                  decoration-warning="status == 'in_progress'" 
                  decoration-danger="status == 'failed'">
                <field name="name"/>
                <field name="model_name"/>
                <field name="optimization_type"/>
                <field name="performance_impact" widget="badge" 
                       decoration-info="performance_impact == 'low'"
                       decoration-warning="performance_impact == 'medium'"
                       decoration-danger="performance_impact == 'high'"
                       decoration-muted="performance_impact == 'critical'"/>
                <field name="status" widget="badge" 
                       decoration-info="status == 'pending'"
                       decoration-warning="status == 'in_progress'"
                       decoration-success="status == 'completed'"
                       decoration-danger="status == 'failed'"
                       decoration-muted="status == 'cancelled'"/>
                <field name="implementation_date"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Performance Optimization Form View -->
    <record id="acmst_performance_optimization_form_view" model="ir.ui.view">
        <field name="name">acmst.performance.optimization.form</field>
        <field name="model">acmst.performance.optimization</field>
        <field name="arch" type="xml">
            <form string="Performance Optimization">
                <header>
                    <button name="action_run_optimization" string="Run Optimization" 
                            type="object" class="btn-primary" 
                            invisible="status != 'pending'"/>
                    <button name="action_cancel_optimization" string="Cancel" 
                            type="object" class="btn-secondary" 
                            invisible="status not in ['pending', 'in_progress']"/>
                    <button name="action_reset_optimization" string="Reset" 
                            type="object" class="btn-secondary" 
                            invisible="status not in ['completed', 'failed', 'cancelled']"/>
                    <field name="status" widget="statusbar" statusbar_visible="pending,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Optimization Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_name"/>
                            <field name="optimization_type"/>
                            <field name="performance_impact"/>
                        </group>
                        <group>
                            <field name="implementation_date"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description of the optimization"/>
                    </group>
                    <group>
                        <field name="performance_metrics" placeholder="Performance metrics and results"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes and comments"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Performance Optimization Search View -->
    <record id="acmst_performance_optimization_search_view" model="ir.ui.view">
        <field name="name">acmst.performance.optimization.search</field>
        <field name="model">acmst.performance.optimization</field>
        <field name="arch" type="xml">
            <search string="Search Performance Optimizations">
                <field name="name" string="Name"/>
                <field name="model_name" string="Model"/>
                <field name="optimization_type" string="Type"/>
                <field name="performance_impact" string="Impact"/>
                <field name="status" string="Status"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('status', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Low Impact" name="low_impact" domain="[('performance_impact', '=', 'low')]"/>
                <filter string="Medium Impact" name="medium_impact" domain="[('performance_impact', '=', 'medium')]"/>
                <filter string="High Impact" name="high_impact" domain="[('performance_impact', '=', 'high')]"/>
                <filter string="Critical Impact" name="critical_impact" domain="[('performance_impact', '=', 'critical')]"/>
                <separator/>
                <filter string="Index Optimizations" name="index" domain="[('optimization_type', '=', 'index')]"/>
                <filter string="Cache Optimizations" name="cache" domain="[('optimization_type', '=', 'cache')]"/>
                <filter string="Query Optimizations" name="query" domain="[('optimization_type', '=', 'query')]"/>
                <filter string="View Optimizations" name="view" domain="[('optimization_type', '=', 'view')]"/>
                <filter string="Report Optimizations" name="report" domain="[('optimization_type', '=', 'report')]"/>
                <filter string="Workflow Optimizations" name="workflow" domain="[('optimization_type', '=', 'workflow')]"/>
                <filter string="Security Optimizations" name="security" domain="[('optimization_type', '=', 'security')]"/>
                <filter string="UI Optimizations" name="ui" domain="[('optimization_type', '=', 'ui')]"/>
                <filter string="API Optimizations" name="api" domain="[('optimization_type', '=', 'api')]"/>
                <filter string="Integration Optimizations" name="integration" domain="[('optimization_type', '=', 'integration')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Model" name="group_model" context="{'group_by': 'model_name'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'optimization_type'}"/>
                    <filter string="Impact" name="group_impact" context="{'group_by': 'performance_impact'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Implementation Date" name="group_date" context="{'group_by': 'implementation_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Performance Optimization Kanban View -->
    <record id="acmst_performance_optimization_kanban_view" model="ir.ui.view">
        <field name="name">acmst.performance.optimization.kanban</field>
        <field name="model">acmst.performance.optimization</field>
        <field name="arch" type="xml">
            <kanban string="Performance Optimizations" class="o_kanban_small_column">
                <field name="name"/>
                <field name="model_name"/>
                <field name="optimization_type"/>
                <field name="performance_impact"/>
                <field name="status"/>
                <field name="implementation_date"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="model_name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="status" widget="label_selection" 
                                               options="{'classes': {'pending': 'info', 'in_progress': 'warning', 'completed': 'success', 'failed': 'danger', 'cancelled': 'muted'}}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="optimization_type" widget="label_selection" 
                                                   options="{'classes': {'index': 'info', 'cache': 'warning', 'query': 'success', 'view': 'primary', 'report': 'secondary', 'workflow': 'dark', 'security': 'danger', 'ui': 'light', 'api': 'muted', 'integration': 'info'}}"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="performance_impact" widget="label_selection" 
                                                   options="{'classes': {'low': 'info', 'medium': 'warning', 'high': 'success', 'critical': 'danger'}}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Performance Optimization Calendar View -->
    <record id="acmst_performance_optimization_calendar_view" model="ir.ui.view">
        <field name="name">acmst.performance.optimization.calendar</field>
        <field name="model">acmst.performance.optimization</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Performance Optimizations" date_start="implementation_date" 
                      color="optimization_type">
                <field name="name"/>
                <field name="model_name"/>
                <field name="optimization_type"/>
                <field name="performance_impact"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <!-- Performance Optimization Pivot View -->
    <record id="acmst_performance_optimization_pivot_view" model="ir.ui.view">
        <field name="name">acmst.performance.optimization.pivot</field>
        <field name="model">acmst.performance.optimization</field>
        <field name="arch" type="xml">
            <pivot string="Performance Optimizations">
                <field name="optimization_type" type="row"/>
                <field name="performance_impact" type="col"/>
                <field name="status" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Performance Optimization Graph View -->
    <record id="acmst_performance_optimization_graph_view" model="ir.ui.view">
        <field name="name">acmst.performance.optimization.graph</field>
        <field name="model">acmst.performance.optimization</field>
        <field name="arch" type="xml">
            <graph string="Performance Optimizations" type="bar">
                <field name="optimization_type" type="row"/>
                <field name="status" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Performance Optimization Action -->
    <record id="acmst_performance_optimization_action" model="ir.actions.act_window">
        <field name="name">Performance Optimizations</field>
        <field name="res_model">acmst.performance.optimization</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
        <field name="search_view_id" ref="acmst_performance_optimization_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first performance optimization!
            </p>
            <p>
                Performance optimizations help improve the speed and efficiency of your admission system.
                You can create various types of optimizations including database indexes, caching, query optimization, and more.
            </p>
        </field>
    </record>

    <!-- Performance Dashboard Action -->
    <record id="acmst_performance_dashboard_action" model="ir.actions.act_window">
        <field name="name">Performance Dashboard</field>
        <field name="res_model">acmst.performance.optimization</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="acmst_performance_optimization_search_view"/>
        <field name="context">{'search_default_completed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Performance Dashboard
            </p>
            <p>
                Monitor and analyze the performance of your admission system optimizations.
                View metrics, trends, and impact analysis of various optimization strategies.
            </p>
        </field>
    </record>

    <!-- Performance Audit Action -->
    <record id="acmst_performance_audit_action" model="ir.actions.act_window">
        <field name="name">Performance Audit</field>
        <field name="res_model">acmst.performance.optimization</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="acmst_performance_optimization_search_view"/>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Performance Audit
            </p>
            <p>
                Run performance audits to identify optimization opportunities.
                Analyze system performance and generate optimization recommendations.
            </p>
        </field>
    </record>

    <!-- Performance Optimization Menu -->
    <menuitem id="acmst_performance_menu" 
              name="Performance" 
              parent="menu_acmst_admission_root" 
              sequence="100"/>

    <menuitem id="acmst_performance_optimization_menu" 
              name="Optimizations" 
              parent="acmst_performance_menu" 
              action="acmst_performance_optimization_action" 
              sequence="10"/>

    <menuitem id="acmst_performance_dashboard_menu" 
              name="Dashboard" 
              parent="acmst_performance_menu" 
              action="acmst_performance_dashboard_action" 
              sequence="20"/>

    <menuitem id="acmst_performance_audit_menu" 
              name="Audit" 
              parent="acmst_performance_menu" 
              action="acmst_performance_audit_action" 
              sequence="30"/>

</odoo>
