<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Coordinator Dashboard View -->
        <record id="view_acmst_coordinator_dashboard" model="ir.ui.view">
            <field name="name">acmst.coordinator.dashboard</field>
            <field name="model">acmst.admission.file</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Coordinator Dashboard">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_pending_review" type="object" class="oe_stat_button" icon="fa-clock-o">
                                <field name="pending_review_count" widget="statinfo" string="Pending Review"/>
                            </button>
                            <button name="action_view_approved" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="approved_count" widget="statinfo" string="Approved"/>
                            </button>
                            <button name="action_view_conditional" type="object" class="oe_stat_button" icon="fa-exclamation-triangle">
                                <field name="conditional_count" widget="statinfo" string="Conditional"/>
                            </button>
                            <button name="action_view_my_reviews" type="object" class="oe_stat_button" icon="fa-user">
                                <field name="my_reviews_count" widget="statinfo" string="My Reviews"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>ðŸŽ“ Academic Coordinator Dashboard</h1>
                            <p>Academic review and conditional approval management</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">ðŸ“š Review Management</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Pending Review</h4>
                                                    <span class="stat-number"><field name="pending_review_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Total Reviews</h4>
                                                    <span class="stat-number"><field name="total_reviews" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Approved</h4>
                                                    <span class="stat-number"><field name="approved_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Conditional</h4>
                                                    <span class="stat-number"><field name="conditional_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">ðŸ“Š Performance Metrics</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>My Reviews</h4>
                                                    <span class="stat-number"><field name="my_reviews_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Review Rate</h4>
                                                    <span class="stat-number"><field name="coordinator_review_rate" widget="statinfo" string="%"/></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Active Conditions</h4>
                                                    <span class="stat-number"><field name="active_conditions_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Overdue Conditions</h4>
                                                    <span class="stat-number"><field name="overdue_conditions_count" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">âš¡ Quick Actions</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <button name="action_view_pending_review" type="object" class="btn btn-warning btn-block">
                                            <i class="fa fa-clock-o"></i> Pending Review
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_approved" type="object" class="btn btn-success btn-block">
                                            <i class="fa fa-check"></i> Approved
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_conditional" type="object" class="btn btn-info btn-block">
                                            <i class="fa fa-exclamation-triangle"></i> Conditional
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_my_reviews" type="object" class="btn btn-primary btn-block">
                                            <i class="fa fa-user"></i> My Reviews
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Coordinator Condition Graph View -->
        <record id="view_acmst_coordinator_condition_graph" model="ir.ui.view">
            <field name="name">acmst.coordinator.condition.graph</field>
            <field name="model">acmst.coordinator.condition</field>
            <field name="arch" type="xml">
                <graph string="Conditions by Status" type="bar">
                    <field name="state" type="row"/>
                    <field name="id" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Coordinator Condition Pivot View -->
        <record id="view_acmst_coordinator_condition_pivot" model="ir.ui.view">
            <field name="name">acmst.coordinator.condition.pivot</field>
            <field name="model">acmst.coordinator.condition</field>
            <field name="arch" type="xml">
                <pivot string="Conditions Analysis">
                    <field name="coordinator_id" type="row"/>
                    <field name="level" type="col"/>
                    <field name="state" type="col"/>
                    <field name="id" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Coordinator Condition Calendar View -->
        <record id="view_acmst_coordinator_condition_calendar" model="ir.ui.view">
            <field name="name">acmst.coordinator.condition.calendar</field>
            <field name="model">acmst.coordinator.condition</field>
            <field name="arch" type="xml">
                <calendar string="Conditions Calendar" date_start="deadline" color="state">
                    <field name="subject_name"/>
                    <field name="applicant_name"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Coordinator Condition Kanban View -->
        <record id="view_acmst_coordinator_condition_kanban" model="ir.ui.view">
            <field name="name">acmst.coordinator.condition.kanban</field>
            <field name="model">acmst.coordinator.condition</field>
            <field name="arch" type="xml">
                <kanban string="Conditions Kanban" class="o_kanban_small_column">
                    <field name="state"/>
                    <field name="subject_name"/>
                    <field name="applicant_name"/>
                    <field name="deadline"/>
                    <field name="days_remaining"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="subject_name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="applicant_name"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span class="badge badge-pill" t-att-class="'badge-' + (record.state.raw_value == 'pending' and 'warning' or record.state.raw_value == 'completed' and 'success' or record.state.raw_value == 'overdue' and 'danger' or 'secondary')">
                                                    <field name="state"/>
                                                </span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span class="text-muted">
                                                    <field name="days_remaining"/> days left
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Coordinator Dashboard Form Action -->
        <record id="action_acmst_coordinator_dashboard_form" model="ir.actions.act_window">
            <field name="name">Coordinator Dashboard</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_acmst_coordinator_dashboard"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No coordinator reviews found
                </p>
                <p>
                    Applications requiring coordinator review will appear here.
                </p>
            </field>
        </record>

        <!-- Coordinator Dashboard Action -->
        <record id="action_acmst_coordinator_dashboard" model="ir.actions.act_window">
            <field name="name">Coordinator Dashboard</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_acmst_coordinator_dashboard"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Coordinator Dashboard
                </p>
                <p>
                    Academic review and conditional approval management.
                </p>
            </field>
        </record>

        <!-- Coordinator Reviews with Form View Action -->
        <record id="action_acmst_coordinator_reviews" model="ir.actions.act_window">
            <field name="name">Coordinator Reviews</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_acmst_coordinator_admission_tree"/>
            <field name="domain">[('state', 'in', ['coordinator_review', 'coordinator_approved', 'coordinator_rejected', 'coordinator_conditional']), ('coordinator_id', '=', uid)]</field>
            <field name="search_view_id" ref="view_acmst_coordinator_admission_search"/>
            <field name="context">{
                'form_view_ref': 'acmst_admission.view_acmst_coordinator_admission_form',
                'default_form_view_ref': 'acmst_admission.view_acmst_coordinator_admission_form'
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No coordinator reviews found
                </p>
                <p>
                    Applications requiring coordinator review assigned to you will appear here.
                </p>
            </field>
        </record>

        <!-- Coordinator My Conditions Action -->
        <record id="action_acmst_coordinator_my_conditions" model="ir.actions.act_window">
            <field name="name">My Conditions</field>
            <field name="res_model">acmst.coordinator.condition</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('coordinator_id', '=', uid)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No conditions assigned to you
                </p>
                <p>
                    You will see conditions assigned to you here.
                </p>
            </field>
        </record>

        <!-- Coordinator Overdue Conditions Action -->
        <record id="action_acmst_coordinator_overdue_conditions" model="ir.actions.act_window">
            <field name="name">Overdue Conditions</field>
            <field name="res_model">acmst.coordinator.condition</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'overdue')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No overdue conditions
                </p>
                <p>
                    All conditions are up to date!
                </p>
            </field>
        </record>

    </data>
</odoo>
