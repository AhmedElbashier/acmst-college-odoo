        <record id="action_acmst_processing_students" model="ir.actions.act_window">
            <field name="name">Processing Students (Ù…Ù† Ø·Ù„Ø§Ø¨ Ø§Ù„Ù…Ø¹Ø§Ù„Ø¬Ø§Øª)</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_processing_student', '=', True)]</field>
            <field name="context">{'create': False, 'search_default_processing_students': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No processing students found!
                </p>
                <p>
                    Students marked as "Ù…Ù† Ø·Ù„Ø§Ø¨ Ø§Ù„Ù…Ø¹Ø§Ù„Ø¬Ø§Øª" (processing students) 
                    are those who were approved by ministry but don't have a university ID yet.
                </p>
            </field>
        </record>

    </data>
</odoo>
