<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Admission Manager Dashboard View -->
        <record id="view_acmst_admission_manager_dashboard" model="ir.ui.view">
            <field name="name">acmst.admission.manager.dashboard</field>
            <field name="model">acmst.admission.file</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Admission Manager Dashboard">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_all_applications" type="object" class="oe_stat_button" icon="fa-list">
                                <field name="total_applications" widget="statinfo" string="All Applications"/>
                            </button>
                            <button name="action_view_pending_review" type="object" class="oe_stat_button" icon="fa-clock-o">
                                <field name="pending_review" widget="statinfo" string="Pending Review"/>
                            </button>
                            <button name="action_view_completed" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="completed" widget="statinfo" string="Completed"/>
                            </button>
                            <button name="action_view_rejected" type="object" class="oe_stat_button" icon="fa-times">
                                <field name="rejected" widget="statinfo" string="Rejected"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>üë®‚Äçüíº Admission Manager Dashboard</h1>
                            <p>Comprehensive admission management and oversight</p>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">üìä Application Overview</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Total Applications</h4>
                                                    <span class="stat-number"><field name="total_applications" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Pending Review</h4>
                                                    <span class="stat-number"><field name="pending_review" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Completed</h4>
                                                    <span class="stat-number"><field name="completed" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Rejected</h4>
                                                    <span class="stat-number"><field name="rejected" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">üîÑ Workflow Status</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Ministry Pending</h4>
                                                    <span class="stat-number"><field name="ministry_pending" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Health Required</h4>
                                                    <span class="stat-number"><field name="health_required" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Coordinator Review</h4>
                                                    <span class="stat-number"><field name="coordinator_review" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="stat-box">
                                                    <h4>Manager Review</h4>
                                                    <span class="stat-number"><field name="manager_review" widget="statinfo"/></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">‚ö° Quick Actions</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <button name="action_view_all_applications" type="object" class="btn btn-primary btn-block">
                                            <i class="fa fa-list"></i> All Applications
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_pending_review" type="object" class="btn btn-warning btn-block">
                                            <i class="fa fa-clock-o"></i> Pending Review
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_completed" type="object" class="btn btn-success btn-block">
                                            <i class="fa fa-check"></i> Completed
                                        </button>
                                    </div>
                                    <div class="col-md-3">
                                        <button name="action_view_rejected" type="object" class="btn btn-danger btn-block">
                                            <i class="fa fa-times"></i> Rejected
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Admission Manager Dashboard Action -->
        <record id="action_acmst_admission_manager_dashboard" model="ir.actions.act_window">
            <field name="name">Admission Manager Dashboard</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_acmst_admission_manager_dashboard"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No applications found
                </p>
                <p>
                    Overview of all admission applications and comprehensive statistics for admission managers.
                </p>
            </field>
        </record>

        <!-- Admission Manager All Applications Action -->
        <record id="action_acmst_admission_manager_all" model="ir.actions.act_window">
            <field name="name">All Applications</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <!-- Admission Manager Pending Review Action -->
        <record id="action_acmst_admission_manager_pending" model="ir.actions.act_window">
            <field name="name">Pending Review</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['ministry_pending', 'health_required', 'coordinator_review', 'manager_review'])]</field>
            <field name="context">{}</field>
        </record>

        <!-- Admission Manager Completed Action -->
        <record id="action_acmst_admission_manager_completed" model="ir.actions.act_window">
            <field name="name">Completed Applications</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'completed')]</field>
            <field name="context">{}</field>
        </record>

        <!-- Admission Manager Rejected Action -->
        <record id="action_acmst_admission_manager_rejected" model="ir.actions.act_window">
            <field name="name">Rejected Applications</field>
            <field name="res_model">acmst.admission.file</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['ministry_rejected', 'health_rejected', 'coordinator_rejected', 'manager_rejected'])]</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
